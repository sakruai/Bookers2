<div class ="containeer px-5 pxsm-0">
  <div class ="row">
   <div class ="col-md-3">
<%= render 'users/list', user: @user %>
<%= render 'new', book: @book %>
   </div>


<div class ="col-md-8 offset-md-1">
  <h2>Books</h2>
  <table class="table table-hover table-inverse">
  <thead>
    <tr>
      <th></th>
      <th>Title</th>
      <th>Opinion</th>
      <th colspan="3"></th>
    </tr>
  </thead>
  <% @books.each do |book| %>
  <tbody>
    <tr>
      <th>
        <%= image_tag 'no_image.jpeg' %>
      </th>
      <th><%=link_to book.title,"/books/#{book.id}" %></th>
      <th><%= book.body %></th>
    </tr>
  </tbody>
  <% end %>
</table>

</div>
</div>
</div>